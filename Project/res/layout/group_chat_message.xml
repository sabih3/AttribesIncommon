<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/com.attribes.incommon"
        android:id="@+id/groupChatMessage_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginTop="20dp">

<RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="10dp">

    <com.attribes.incommon.views.CustomTextView
            xmlns:custom="http://schemas.android.com/apk/res/com.attribes.incommon"
            android:id="@+id/groupChatMessage_senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:textColor="@color/lite_grey_text"
            android:text="Sarah"
            custom:fontName="Mark Simonson - Proxima Nova Regular.ttf"
            android:textIsSelectable="true"
            />
    <com.attribes.incommon.views.CustomTextView
            xmlns:custom = "http://schemas.android.com/apk/res/com.attribes.incommon"
            android:id="@+id/groupChatMessage_messageInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1 hour ago"
            android:textColor="@color/lite_grey_text"
            android:layout_marginRight="20dp"
            custom:fontName="Mark Simonson - Proxima Nova Regular.ttf"
            />
</RelativeLayout>



    <LinearLayout
            android:id="@+id/groupChatMessage_messageContent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >
        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/groupChatMessage_userImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:border="false"
                android:visibility="gone"

                />
        <TextView
                android:id="@+id/groupChatMessage_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/out_with_gap_top"
                android:textIsSelectable="true"
                android:text="testing for large message to increase character count so that we make it close to mockup"
                android:layout_marginBottom="10dp"
                />


    </LinearLayout>



</LinearLayout>
