<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connect_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/shareScreen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:text="Share"
        />

    <TextView 
        android:id="@+id/shareScreen_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shareScreen_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:text="Tell your friends about InCommon"
        />
    
    <LinearLayout 
        android:id="@+id/shareScreen_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/shareScreen_description"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">
        
        	<ImageView 
        	    android:id="@+id/shareScreen_mailIcon"
        	    android:layout_width="50dp"
        	    android:layout_height="50dp"
        	    android:contentDescription="Mail"
        	    android:src="@drawable/icon_mail"
        	    
        	    />
        
        	<ImageView 
        	    android:id="@+id/shareScreen_fbIcon"
        	    android:layout_width="50dp"
        	    android:layout_height="50dp"
        	    android:layout_marginLeft="10dp"
        	    android:contentDescription="FaceBook"
        	    android:src="@drawable/icon_fb"
        	    />
        	
        	<ImageView 
        	    android:id="@+id/shareScreen_googleIcon"
        	    android:layout_width="50dp"
        	    android:layout_height="50dp"
        	    android:contentDescription="google+"
        	    android:layout_marginLeft="10dp"
        	    android:src="@drawable/icon_gplus"
        	    />
        	
        	<ImageView 
        	    android:id="@+id/shareScreen_twitterIcon"
        	    android:layout_width="50dp"
        	    android:layout_height="50dp"
        	    android:layout_marginLeft="10dp"
        	    android:contentDescription="Twitter"
        	    android:src="@drawable/icon_twitter"
        	    />
        
    </LinearLayout>
    
    <WebView 
        android:id="@+id/shareScreen_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
</RelativeLayout>

<!-- Listview to display slider menu -->
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="@color/list_background"
        android:dividerHeight="1dp" />
        <!--       
        android:listSelector="@drawable/drawer_list_selector"
        android:background="@color/list_background"
         -->
         
</android.support.v4.widget.DrawerLayout>