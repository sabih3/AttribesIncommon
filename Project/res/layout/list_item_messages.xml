<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:weightSum="3" >
 
	 <com.mikhaellopez.circularimageview.CircularImageView
       android:id="@+id/list_item_messages_UserImage"
       android:layout_width="60dp"
       android:layout_height="60dp"
       android:layout_margin="10dp"
       android:layout_gravity="center_vertical|start"
       android:scaleType="centerCrop"
       app:border="false"
       
       />

	<RelativeLayout
		android:id="@+id/list_item_messages_nameAndMessage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/list_item_messages_UserImage"
	    android:layout_marginTop="20dp"
	    android:orientation="vertical"
	    android:gravity="center_vertical"
	    >
	    
	    <TextView
	        android:id="@+id/list_item_messages_userName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:textColor="#333333"
	        android:textSize="18sp"
	        >

    </TextView>

	    <TextView 
	        
	       android:id="@+id/list_item_message_userMessage"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/list_item_messages_userName"
           android:layout_gravity="center_vertical"
           android:maxLines="1"
           android:layout_marginRight="20dp"
           android:layout_marginTop="2dp"
           android:layout_alignLeft="@+id/list_item_messages_userName"
           android:textColor="#777777"
           android:textSize="15sp"

           />
	    
	    
	</RelativeLayout>
	<TextView
	 	    android:id="@+id/list_item_message_messageDate"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	   
	 	    android:layout_marginTop="10dp"
	 	    android:layout_alignParentRight="true"
	 	    android:layout_marginRight="20dp"
	 	   
	 	    android:text="15.8"
	 	    android:textColor="#999999"
	 	    android:textSize="15sp" />
	</RelativeLayout>
