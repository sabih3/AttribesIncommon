<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/matchProfilePush_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.attribes.incommon.MatchProfile" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/createProfile_profilePic"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="top|fill"
            android:layout_margin="0dp"
            android:background="@drawable/placeholder"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/name_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/createProfile_profilePic"
            android:background="#282828"
            android:gravity="center_vertical"
            android:weightSum="3" >

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.25"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="20sp" 
                />

            <TextView
                android:id="@+id/distance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.75"
                android:gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="12sp" 
                android:text="69 kilometers away"/>

            <ImageView
                android:id="@+id/matchProfile_isOnline"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="10dp"                
                android:layout_weight="0.25"
                android:contentDescription="@string/match_profile_isOnline"
                android:visibility="visible"
                android:background="@drawable/green_circle"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/actions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_bar"
            android:layout_margin="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/chat"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_chat" />

            <ImageView
                android:id="@+id/matchProfile_like"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@id/chat"
                android:clickable="true"
                android:src="@drawable/ic_like" />

            <ImageView
                android:id="@+id/add_friend"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/matchProfile_like"
                android:src="@drawable/ic_add_friend" />

            <ImageView
                android:id="@+id/info"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_info" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/actions_layout"
            android:background="@color/divider" />
		
		<TextView
            android:id="@+id/interest_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_margin="10dp"
            android:text="Interests matched:"
            android:textSize="16sp" 
            android:textColor="#414242"/>
        
        <LinearLayout
            android:id="@+id/interests_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/interest_text"
            android:orientation="vertical" 
            >

        <GridView
            android:id="@+id/interest_grid"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/interests_layout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:numColumns="3" 
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:scrollbars="none"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/profile_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/interest_text"
            android:layout_marginLeft="10dp"
            android:visibility="gone" 
            android:textColor="#414242"/>
    </RelativeLayout>

</ScrollView>