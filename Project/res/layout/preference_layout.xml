<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:rsb="http://schemas.android.com/apk/res/com.attribes.incommon"
     xmlns:tools="http://schemas.android.com/tools"
     android:id="@+id/connect_drawer_layout"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
    
<RelativeLayout
    android:id="@+id/preference_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEEE" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" 
        android:background="#EEEEEE">
 		
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
             >
	 		<TextView 
	 		    android:id="@+id/settingScreen_ageLabel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Age"
	            android:textSize="20dp"
	            android:textColor="#1c1c1c"
	            />
	 		<TextView 
	 		    android:id="@+id/settingScreen_ageRangeText"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_alignParentRight="true"
	 		    android:layout_marginRight="5dp"
	 		    android:text="26-42"
	 		    android:textSize="20dp"
	 		    android:textColor="#1c1c1c"
	 		    />
 		</RelativeLayout>
 		<com.yahoo.mobile.client.android.util.RangeSeekBar
 		    android:id="@+id/settingScreen_ageRange" 
 		    android:layout_width="match_parent"
            android:layout_height="60dp"
			android:paddingTop="10dp"
			android:background="#FFFFFF"
			rsb:absoluteMinValue="18"
			rsb:absoluteMaxValue="75"
            />
 		<RelativeLayout 
 		    android:layout_width="match_parent"
 		    android:layout_height="wrap_content"
 		    android:layout_marginTop="15dp"
 		    >
	 		<TextView 
	 		    android:id="@+id/settingScreen_distanceLabel"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:text="Search distance"
	 		    android:textSize="20dp"
	 		    android:textColor="#1c1c1c"
	 		    />
	 		
	 		<TextView 
	 		    android:id="@+id/settingScreen_distanceText"
	 		    android:layout_width="wrap_content"
	 		    android:layout_height="wrap_content"
	 		    android:layout_alignParentRight="true"
	 		    android:layout_marginRight="5dp"
	 		    android:text="100km"
	 		    android:textSize="20dp"
	 		    android:textColor="#1c1c1c"
	 		    />
 		</RelativeLayout>
 		<SeekBar 
 		    android:id="@+id/settingScreen_distance"
 		    android:layout_width="match_parent"
 		    android:layout_height="50dp"
 		    android:paddingTop="10dp"
 		    android:background="#FFFFFF"
 		    />
 		
        <TextView 
            android:id="@+id/settingScreen_textViewShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Show"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:textSize="20dp"
            android:textColor="#1c1c1c"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" 
            android:background="#FFFFFF"
            >

            <TextView
                android:id="@+id/settingScreen_TextViewMen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Men"
                android:textSize="15dp" 
                android:paddingLeft="10dp"
            	android:paddingRight="10dp"
            	android:textColor="#4f4d4d"/>
			
			<View
				 android:layout_width="match_parent"
				 android:layout_height="0.5dp"
				 android:background="#EEEEEE" />
            
            <CheckBox
                android:id="@+id/settingScreen_checkBoxMen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:checked="false" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" 
            android:background="#FFFFFF" >

            <TextView
                android:id="@+id/settingScreen_TextViewWomen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Women" 
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4f4d4d"/>
			
            <View
				 android:layout_width="match_parent"
				 android:layout_height="0.5dp"
				 android:background="#EEEEEE" />
            
            <CheckBox
                android:id="@+id/settingScreen_checkBoxWomen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:checked="false" />

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" 
            android:background="#FFFFFF"
            >

            <TextView
                android:id="@+id/settingScreen_TextViewBoth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Both"
                android:textSize="15dp" 
                android:paddingLeft="10dp"
            	android:paddingRight="10dp"
            	android:textColor="#4f4d4d"/>
			
			<View
				 android:layout_width="match_parent"
				 android:layout_height="0.5dp"
				 android:background="#EEEEEE" />
            
            <CheckBox
                android:id="@+id/settingScreen_checkBoxBoth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:checked="false" />

        </RelativeLayout>
        
        <View 
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            />
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" 
            android:background="#FFFFFF">
			
            <TextView
                android:id="@+id/settingScreen_TextViewAlerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Alerts" 
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4f4d4d"/>
			
			<View
				 android:layout_width="match_parent"
				 android:layout_height="0.5dp"
				 android:background="#EEEEEE" />
            
            <CheckBox
                android:id="@+id/settingScreen_checkBoxAlerts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
             >

            <TextView
                android:id="@+id/settingScreen_TextViewMatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="New matches" 
                android:textSize="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4f4d4d"/>
			
            <View
				 android:layout_width="match_parent"
				 android:layout_height="0.5dp"
				 android:background="#EEEEEE" />
            
            <CheckBox
                android:id="@+id/settingScreen_checkBoxMatches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
               />

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" 
            android:background="#FFFFFF"
          >

            <TextView
                android:id="@+id/settingScreen_TextViewMessages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Messages"
                android:textSize="15dp" 
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#4f4d4d"/>
			
			<View
				 android:layout_width="match_parent"
				 android:layout_height="0.5dp"
				 android:background="#EEEEEE" />
            
            <CheckBox
                android:id="@+id/settingScreen_checkBoxMessages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<!-- Listview to display slider menu -->
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="@color/list_background"
        android:dividerHeight="1dp" />
        <!--       
        android:listSelector="@drawable/drawer_list_selector"
        android:background="@color/list_background"
         -->
         
</android.support.v4.widget.DrawerLayout>