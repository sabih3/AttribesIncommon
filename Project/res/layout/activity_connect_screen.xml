<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connect_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center" >
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.attribes.incommon.ConnectScreen" 
    android:orientation="vertical">

    <Button
        android:id="@+id/search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="16sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_button"/>
    
     <TextView
         android:id="@+id/connect"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@id/search_button"
         android:gravity="center"
         android:layout_marginLeft="50dp"
         android:layout_marginRight="50dp"
         android:fitsSystemWindows="true"
         android:text="@string/connectText"
         android:textColor="#6d6b6b"
         android:textSize="18sp" />
    
    <TextView
        android:id="@+id/connect_with_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/connect"
        android:layout_marginBottom="20dp"
        android:textColor="#333333"
        android:text="Connect with others" 
        android:textSize="24sp"/>
    
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connectScreen_progressBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" 
        android:visibility="gone"/>

</RelativeLayout>

    <!-- Listview to display slider menu -->
    <ListView
        android:id="@+id/list_slidermenu"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:background="@color/list_background"
        android:dividerHeight="1dp" />
        <!--       
        android:listSelector="@drawable/drawer_list_selector"
        android:background="@color/list_background"
         -->
         
</android.support.v4.widget.DrawerLayout>